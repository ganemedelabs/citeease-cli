{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
    },
    "plugins": ["@typescript-eslint", "import", "prettier"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/errors",
        "plugin:prettier/recommended",
    ],
    "rules": {
        "indent": ["warn", 4],
        "quotes": ["warn", "double"],
        "no-unused-vars": "warn",
        "@typescript-eslint/no-var-requires": "off",
    },
}
